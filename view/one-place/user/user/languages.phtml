                                        <input type="radio" name="user_language" value="<?=$sLang?>" <?=$sChecked?>/> <?=$sLang?>
                                    </li>
                                <?php }
                            }
                        }
                        ?>
                    </ul>
                </div>
                <div class="card-footer">
                    <div class="form-row">
                        <button class="btn btn-primary" type="submit">

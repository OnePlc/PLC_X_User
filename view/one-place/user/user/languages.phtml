    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">
                        <?=$this->translate('Choose Language')?>
                    </h2>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <?php if(is_array($aLangs)) {
                            if(count($aLangs) > 0) {
                                foreach($aLangs as $sLang) {
                                    $sChecked = ($sCurrentLang == $sLang) ? ' checked' : '';
                                    ?>
